<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_pessoaconta" />



    <TextView
        android:id="@+id/tv_user_nome"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="12"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/icon_nomeuser"
        android:textColor="#ffffff" />




    <TextView
        android:id="@+id/tv_user_senha"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/icon_enha"
        android:textColor="#ffffff" />




    <TextView
        android:id="@+id/tv_user_email"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_user_senha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_stat_add"
        android:textColor="#ffffff" />




</RelativeLayout>
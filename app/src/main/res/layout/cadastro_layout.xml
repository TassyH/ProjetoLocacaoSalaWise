<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#8C92B1">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/icon_user" />

    <EditText
        android:id="@+id/ed_cadastro_nome"
        android:layout_width="240dp"
        android:layout_height="34dp"
        android:layout_below="@+id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/editt_radius"
        android:ems="10"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/icon_enha"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_cadastro_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user"
        android:layout_alignStart="@+id/ed_cadastro_nome"
        android:layout_alignLeft="@+id/ed_cadastro_nome"
        android:layout_marginTop="20dp"
        android:text="Nome"
        android:textColor="#000000"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/ed_cadastro_email"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ed_cadastro_nome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/editt_radius"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/icon_nomeuser"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_cadastro_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_cadastro_nome"
        android:layout_alignStart="@+id/ed_cadastro_nome"
        android:layout_alignLeft="@+id/ed_cadastro_nome"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btn_cadastrar"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_cadastro_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/botao_radius"
        android:clickable="true"
        android:text="Cadastrar"
        android:textColor="#000000"
        android:textSize="20sp" />


</RelativeLayout>
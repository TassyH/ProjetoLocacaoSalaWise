

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:background="#8C92B1">


<ImageView
    android:id="@+id/iv_user"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    app:srcCompat="@drawable/icon_user" />

<EditText
    android:id="@+id/ed_login_email"
    android:drawableLeft="@drawable/icon_nomeuser"
    android:textColor="#000000"
    android:background="@drawable/editt_radius"
    android:layout_width="240dp"
    android:layout_height="36dp"
    android:layout_below="@+id/iv_user"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
    android:ems="10"
    android:inputType="textEmailAddress" />


<Button
    android:id="@+id/btn_login"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textSize="20sp"
    android:background="@drawable/botao_radius"
    android:layout_below="@+id/ed_login_email"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
    android:text="Login"
    />

<Button
    android:id="@+id/btn_cadastro2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btn_login"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:textSize="15sp"
    android:textColor="#ffffff"
    android:background="@null"
    android:text="Cadastre-me" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.CadastroReservaActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <EditText
        android:id="@+id/ed_nome_organizador"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:background="@drawable/editt_radius"
        android:inputType="textCapWords"
        android:hint="Organizador"
        />

    <EditText
        android:id="@+id/ed_descricao"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/editt_radius"
        android:hint="Descricao do uso da sala" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/btn_select_data"
            android:layout_width="100dp"
            android:layout_height="99dp"
            android:layout_gravity="left"
            android:layout_marginStart="1dp"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/icon_calendario"
            android:text="Empresa Matriz" />

        <TextView
            android:id="@+id/text_calendario"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:layout_marginEnd="30dp"
            android:hint="Selecione uma data"
            android:background="@drawable/editt_radius">

        </TextView>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_select_horaIcial"
            android:layout_width="100dp"
            android:layout_height="91dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/btn_select_horaIcial"
            android:layout_weight="0"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/icon_horaio">

        </ImageButton>
        <TextView
            android:id="@+id/text_horaioFinal"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/editt_radius"
            android:hint="Horario Inicial">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_select_horaFinal"
            android:layout_width="100dp"
            android:layout_height="91dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/btn_select_horaIcial"
            android:layout_weight="0"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/icon_horaio">
        </ImageButton>

        <TextView
            android:id="@+id/text_horaioInicial"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/editt_radius"
            android:hint="Horario final">

        </TextView>


    </LinearLayout>

    </LinearLayout>
</ScrollView>

